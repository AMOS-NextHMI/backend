{
  "name": "websocket-node-express",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "copy-deps": "copy-newer --cwd node_modules ** ./dist/node_modules",
    "start": "node --inspect=5858 -r ts-node/register ./src/ws-server.ts",
    "start:watch": "nodemon",
    "preserve": "npm run build",
    "s": "npm run serve",
    "serve": "concurrently \"npm run build.w\" \"nodemon --watch ./dist/server ./dist/server/server.js\"",
    "prebuild": "npm install",
    "b": "npm run build.w",
    "build": "tsc",
    "build.w": "npm run copy-deps && tsc -w"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/mongoose": "^5.5.41",
    "cors": "^2.8.5",
    "express": "^4.16.2",
    "mongodb": "^3.4.1",
    "mongoose": "^5.8.9",
    "password-hash": "^1.2.2",
    "ts-mongoose": "0.0.21",
    "ts-node": "^8.5.4",
    "tslint": "^6.0.0",
    "ws": "^4.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.11.0",
    "@types/mongodb": "^3.3.14",
    "@types/ws": "^4.0.0",
    "concurrently": "^3.5.1",
    "copy-newer": "^2.1.2",
    "nodemon": "^1.19.4",
    "rimraf": "^2.6.2",
    "typescript": "^2.7.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
