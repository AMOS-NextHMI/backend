{
  "name": "websocket-node-express",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "copy-deps": "copy-newer --cwd node_modules ** ./dist/node_modules",
    "start": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "preserve": "npm run build",
    "s": "npm run serve",
    "serve": "concurrently \"npm run build.w\" \"nodemon --watch ./dist/server ./dist/server/server.js\"",
    "lint": "tslint \"src/**/*.ts\"",
    "prebuild": "npm install",
    "b": "npm run build.w",
    "build": "tsc",
    "build.w": "npm run copy-deps && tsc -w"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.2",
    "ts-node": "^8.5.4",
    "ws": "^4.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.11.0",
    "@types/ws": "^4.0.0",
    "concurrently": "^3.5.1",
    "copy-newer": "^2.1.2",
    "nodemon": "^1.19.4",
    "rimraf": "^2.6.2",
    "typescript": "^2.7.2"
  },
  "nodemonConfig": {
    "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts",
    ".git",
    "node_modules"
    ],
    "watch": [
    "src"
    ],
    "exec": "npm start",
    "ext": "ts"
    }
    
}
